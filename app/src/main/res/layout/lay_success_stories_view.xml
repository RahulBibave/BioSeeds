<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/videoCard"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size5dp"
    android:layout_margin="@dimen/size10dp"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/lin_success"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size150dp"
        android:weightSum="2.0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/proimage"
                android:orientation="vertical">
            <ImageView
                android:textSize="@dimen/textSize20sp"
                android:textColor="@android:color/white"
                android:id="@+id/success_img"
                android:padding="@dimen/size5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:scaleType="fitXY"
                />
                <ProgressBar
                    android:id="@+id/loadings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
            </FrameLayout>
            <TextView
                android:textSize="@dimen/textSize12sp"
                android:textColor="@android:color/white"
                android:id="@+id/SingleVideoLanguage1"
                android:background="#90000000"
                android:padding="@dimen/size5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size10dp"
            android:layout_marginRight="@dimen/size10dp"
            android:layout_marginTop="@dimen/size5dp"
            android:layout_marginBottom="@dimen/size5dp"
            android:layout_weight="0.8"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/lay_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16.0sp"
                    android:textStyle="bold"
                    android:text="Name : "
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:id="@+id/singleVideoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:singleLine="true"
                    android:textSize="15dp"
                    android:id="@+id/txtName"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rahul Bibave" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_address"
                android:layout_below="@+id/lay_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16.0sp"
                    android:textStyle="bold"
                    android:text="Address : "
                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:singleLine="true"
                    android:id="@+id/txtAddress"
                    android:textSize="15dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rahul Bibave" />


            </LinearLayout>
                 <TextView
                android:layout_below="@+id/lay_address"
                     android:textSize="15dp"
                android:id="@+id/txtMsg"
                     android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"

            />
            <TextView

                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textSize12sp"
                android:text=""
                android:id="@+id/txtDate"
                android:fontFamily="@font/roboto_thin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_gravity="bottom"
        android:background="#ffc0c0c0"
        android:layout_width="fill_parent"
        android:layout_height="2.0dip" />
</android.support.v7.widget.CardView>